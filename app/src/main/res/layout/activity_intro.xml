<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="50dp"
    android:paddingRight="30dp"
    android:background="@color/original_white">

    <TextView
        android:id="@+id/tv_tour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="둘러보고 시작하기"
        android:textColor="@color/grey_500"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_welcome"
        android:text="푸드딜 사용을\n환영합니다!"
        android:textColor="@color/original_black"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.3"/>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/main_color_button_style"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome"
        android:layout_marginTop="40dp"
        android:text="로그인 하기"
        android:textStyle="bold"
        android:textColor="@color/original_white"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/post_button"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        android:layout_marginTop="15dp"
        android:text="가입하고 구경하기"
        android:textStyle="bold"
        android:textColor="@color/original_black"/>


</androidx.constraintlayout.widget.ConstraintLayout>