<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <TextView
        android:id="@+id/tv_post_title"
        android:text="글 제목"
        android:textStyle="bold"
        android:textColor="@color/original_black"
        android:textSize="25sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/iv_user_profile"
        android:background="#e7e7e7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_post_title"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/tv_user_id"
        android:text="아이디"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/original_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_user_profile"
        app:layout_constraintTop_toTopOf="@id/iv_user_profile"
        app:layout_constraintBottom_toTopOf="@id/tv_user_location"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/tv_user_location"
        android:text="어디야?"
        android:textColor="@color/original_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_user_id"
        app:layout_constraintTop_toBottomOf="@id/tv_user_id"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_profile"/>

    <View
        android:id="@+id/v_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e7e7"
        app:layout_constraintTop_toBottomOf="@id/iv_user_profile"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_post_info"
        android:text="식재나눔 ･ 방금전"
        android:textColor="#c4c4c4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_1"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_post"
        android:text="맛있는 귤!"
        android:textColor="@color/original_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_post_info"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv_post_like"
        android:text=""
        android:textColor="#c4c4c4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_post"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/v_2"
        android:background="#e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_post_like"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>