<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mypage.MySettingActivity"
    android:background="@color/original_white">

    <include layout="@layout/layout_default_toolbar"
        android:id="@+id/top_toolbar"/>

    <TextView
        android:id="@+id/tv_logout"
        android:text="로그아웃"
        android:textStyle="bold"
        android:textColor="@color/original_black"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_toolbar"
        app:layout_constraintRight_toLeftOf="@id/iv_logout"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"/>
    
    <ImageView
        android:id="@+id/iv_logout"
        android:src="@drawable/ic_icon_next"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/tv_logout"
        app:layout_constraintBottom_toBottomOf="@id/tv_logout"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"/>

    <TextView
        android:id="@+id/tv_sign_out"
        android:text="탈퇴하기"
        android:textStyle="bold"
        android:textColor="@color/original_black"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_logout"
        app:layout_constraintRight_toLeftOf="@id/iv_bye_bye"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/iv_bye_bye"
        android:src="@drawable/ic_icon_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/tv_sign_out"
        app:layout_constraintBottom_toBottomOf="@id/tv_sign_out"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>